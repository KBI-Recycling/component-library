{
  "name": "@kbi/component-library",
  "version": "0.3.25",
  "description": "A library of all reusable KBI components and utilities.",
  "repository": "https://github.com/KBI-Recycling/component-library",
  "main": "dist/index.js",
  "scripts": {
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "styleguide:deploy": "gh-pages -d examples",
    "transpile": "babel src -d dist --copy-files",
    "publish-free": "npm publish --access public"
  },
  "author": "Daniel Kinsbursky",
  "license": "ISC",
  "dependencies": {
    "google-libphonenumber": "3.2.10",
    "lodash.get": "4.4.2",
    "match-sorter": "4.1.0",
    "react-table": "7.2.0"
  },
  "peerDependencies": {
    "@material-ui/core": "4.x.x",
    "@material-ui/icons": "4.x.x",
    "@material-ui/lab": "4.0.0-alpha.56",
    "formik": "2.x.x",
    "moment": "2.x.x",
    "react": "16.x.x",
    "react-dom": "16.x.x"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/core": "7.10.2",
    "@babel/plugin-proposal-optional-chaining": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-react": "7.10.1",
    "@material-ui/core": "4.10.2",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.2.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "css-loader": "3.6.0",
    "eslint": "6.8.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "2.5.1",
    "formik": "2.1.4",
    "gh-pages": "2.2.0",
    "moment": "2.24.0",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-styleguidist": "11.0.8",
    "style-loader": "1.2.1",
    "typescript": "3.9.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "yup": "0.29.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "google"
    ],
    "rules": {
      "arrow-parens": 0,
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 1
        }
      ],
      "linebreak-style": 0,
      "max-len": [
        "error",
        {
          "code": 200
        }
      ],
      "react/prop-types": [
        2
      ],
      "react/jsx-tag-spacing": [
        2
      ]
    }
  }
}